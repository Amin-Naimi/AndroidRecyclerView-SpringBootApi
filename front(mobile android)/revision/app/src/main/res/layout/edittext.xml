<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <EditText
        android:id="@+id/offre_intutile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="intutile"
        android:padding="12dp" />

    <EditText
        android:id="@+id/offre_specialiter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="specialiter"
        android:padding="12dp"
        android:layout_margin="8dp"
     />

    <EditText
        android:id="@+id/offre_socite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="socite"
        android:padding="12dp"
        android:layout_margin="8dp"
         />

    <EditText
        android:id="@+id/offre_nbpostes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="nbpostes"
        android:padding="12dp"
        android:layout_margin="8dp"
         />

    <EditText
        android:id="@+id/offre_pays"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="pays"
        android:padding="12dp"
        android:layout_margin="8dp"
        />
</LinearLayout>
